<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Simulations.HouseAlarmActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/domek"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/movementSensorbutton"
                android:layout_width="52dp"
                android:layout_height="102dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/doorButton"
                android:text="Button"
                android:visibility="visible"
                android:layout_alignParentRight="true" />

            <Button
                android:id="@+id/window2Button"
                android:layout_width="41dp"
                android:layout_height="76dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="95dp"
                android:layout_marginTop="99dp"
                android:text="Button"
                android:visibility="visible"
                android:layout_marginRight="95dp"
                android:layout_alignParentRight="true" />

            <Button
                android:id="@+id/window1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="137dp"
                android:text="Button"
                android:visibility="visible"
                android:layout_marginLeft="137dp"
                android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/doorButton"
                android:layout_width="53dp"
                android:layout_height="87dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="67dp"
                android:layout_marginStart="67dp"
                android:text="Button"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="67dp" />

            <Button
                android:id="@+id/armingButton"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="62dp"
                android:text="Button"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_marginRight="62dp" />
        </RelativeLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AlarmSwiatlo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Alarm_swiatlo"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/alarmDzwiek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Alarm_dzwiek"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/onOffAlarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="On/Off alarm"
            android:gravity="center"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>