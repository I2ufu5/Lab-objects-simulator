<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_border"
        android:layout_margin="@dimen/info_margins2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP: "
            android:textSize="@dimen/info_textsize"
            android:layout_margin="@dimen/info_margins"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="192.168.1.100"
            android:textSize="@dimen/info_textsize"
            android:id="@+id/ipText"
            android:layout_margin="@dimen/info_margins"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_border"
        android:layout_margin="@dimen/info_margins2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port: "
            android:textSize="@dimen/info_textsize"
            android:layout_margin="@dimen/info_margins"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="10502"
            android:textSize="@dimen/info_textsize"

            android:id="@+id/portText"
            android:layout_margin="@dimen/info_margins"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_border"
        android:layout_margin="@dimen/info_margins2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnitID: "
            android:textSize="@dimen/info_textsize"

            android:layout_margin="@dimen/info_margins"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="255"
            android:textSize="@dimen/info_textsize"

            android:id="@+id/unitIdText"
            android:layout_margin="@dimen/info_margins"/>

    </LinearLayout>

</LinearLayout>
